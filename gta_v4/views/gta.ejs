<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<title>GeoTagApp</title>
		<link rel='stylesheet' href='./stylesheets/style.css'/>
	</head>

	<body>

		<header>
			<img src="./images/location.png" width="100"
					alt="an image of a map and location">
			<h1>GeoTagApp</h1>
			<nav>
				<a href="#">About</a> | <a href="#">Help</a> | <a
					href="/">Home</a>
			</nav>
		</header>

		<main>
            <div class="row">
                <div class="col-3">
                    <section class="tagging">
                        <h2>Tagging</h2>

                        <!-- ############### Aufgabe4 Button durch typ button ersetzt -->
                        <form id="tag-form" action="/tagging" method="post">
                            <fieldset>
                                <legend>Tagging Widget</legend>
                                <label for="tagging_latitude">Latitude</label>
                                <input type="text" name="tagging_latitude" id="tagging_latitude" placeholder="49.013770" required>
                                <label for="tagging_longitude">Longitude</label>
                                <input type="text" name="tagging_longitude" id="tagging_longitude" placeholder="8.404377" required>
                                <label for="name">Name</label>
                                <input type="text" name="name" id="name" placeholder="some name" maxlength="10" required>
                                <label for="hashtag">Hashtag</label>
                                <input type="text" name="hashtag" id="hashtag" placeholder="#somehashtag" maxlength="11" pattern="#[A-Za-zäÄöÖüÜß]{1,10}">
                                <input type="button" id="tag-button" value="Submit">
                            </fieldset>
                        </form>
                        <!-- ############### Aufgabe4 -->

                    </section>
                </div>
                <div class="col-9">
                    <section class="discovery">
                        <h2>Discovery</h2>

                        <!-- ############### Aufgabe1a Form2 Start -->
                        <form id="filter-form" action="/discovery" method="post">
                            <fieldset>
                                <legend>Discovery Widget</legend>
                                <input type="text" name="searchterm" id="searchterm" placeholder="a search term">
                                <input type="text" hidden name="discovery_latitude" id="discovery_latitude">
                                <input type="text" hidden name="discovery_longitude" id="discovery_longitude">
                                <input type="button" id="filter-button" value="Search">
                            </fieldset>
                        </form>
                        <!-- ############### Aufgabe1a Form2 Ende -->

                        <div class="row">
                            <div class="col-3">
                                <div class="taglist">
                                    <ul id="results">
                                        <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                                            <li><%= gtag.name %> (<span class="lat"><%= gtag.latitude %></span>, <span class="lon"><%= gtag.longitude%></span>) <%= gtag.hashtag %></li>
                                        <% }); %>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-9">
                                <div class="tagmap">
                                    <img id="result-img" src="./images/mapview.jpg" alt="a map with locations"/>
                                    <div class="caption">Result map</div>
                                </div>
                            </div>
                        </div>

                    </section>
                </div>
            </div>
		</main>

		<footer>
			<span>2017 by LKIT</span>
		</footer>
        <!-- Load JavaScripts
            ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
        <script src="./javascripts/geotagging.js"></script>
	</body>
</html>